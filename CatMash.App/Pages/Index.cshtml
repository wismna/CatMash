@page
@using CatMash.App.Interfaces
@model IndexModel
@inject IImageService ImageService
@inject IVotingService VotingService
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Cat Mash!</h1>
</div>

<div class="container-fluid">
    <form asp-page-handler="vote" method="post">
        <div class="row">
            @foreach (var image in VotingService.GetImagesToCompare())
            {
                <div class="col">
                    <div class="card text-center" style="width: 18rem;">
                        <img src="@image.Url" class="card-img-top" alt="...">
                        <div class="card-body">
                            <button class="btn btn-primary">Vote for me!</button>
                            <input type="hidden" name="id" value="@image.Id" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>
</div>
